<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="8dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom"
                android:layout_marginTop="8dp"
                android:text="Iftar Du'a"
                android:background="#000000"
                android:textColor="#ffff"
                android:textSize="18dp"

                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:id="@+id/dua"

                android:layout_above="@+id/tv_dua"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:textColor="#000000"
                android:typeface="serif"
                android:text="اللَّهُمَّ اِنِّى لَكَ صُمْتُ وَبِكَ امنْتُ [وَعَلَيْكَ تَوَكَّلْتُ] وَعَلَى رِزْقِكَ اَفْطَرْتُ "
                android:id="@+id/tv_dua"
                android:layout_above="@+id/textView2"
                android:layout_alignStart="@+id/textView2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transliteration:"
                android:textColor="#000000"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:id="@+id/textView2"
                android:layout_above="@+id/eng_dua"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Allahumma Inni laka sumtu wa bika amantu [wa alayka tawakkalto] wa ‘ala rizqika aftartu"
                android:gravity="bottom"
                android:textColor="#000000"
                android:typeface="serif"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"

                android:id="@+id/eng_dua"
                android:layout_above="@+id/textView6"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meaning:"
                android:textColor="#000000"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_above="@+id/mng_dua"
                android:layout_alignParentEnd="true"
                android:id="@+id/textView6" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O Allah! I fasted for You and I believe in You [and I put my trust in You] and I break my fast with Your sustenance.
[“wa ‘alayka tawakkaltu” is quoted in some books of knowledge – but not all, hence it is in brackets]
[Abu Dawud]"
                android:gravity="bottom"
                android:textColor="#000000"
                android:typeface="serif"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:id="@+id/mng_dua"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom"
                android:background="#000000"
                android:textColor="#ffff"
                android:typeface="serif"
                android:text="Sheri Du'a"
                android:layout_marginTop="8dp"
                android:textSize="18dp"

                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:textStyle="bold"
                android:id="@+id/sdua"
                android:layout_above="@+id/tv_dua"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="وَبِصَوْمِ غَدٍ نَوَيْتُ مِنْ شَهْرِ رَمَضَانَ"
                android:id="@+id/stv_dua"
                android:textColor="#000000"
                android:typeface="serif"
                android:layout_marginBottom="8dp"
                android:layout_above="@+id/textView4"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transliteration:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:typeface="serif"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/textView4"
                android:layout_above="@+id/eng_dua"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wa bi-sawmi ghadin nawaytu min shahri ramadan"
                android:gravity="bottom"
                android:textColor="#000000"
                android:typeface="serif"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:id="@+id/seng_dua"
                android:layout_marginBottom="8dp"
                android:layout_above="@+id/textView5"
                android:layout_alignParentEnd="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Meaning:"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:typeface="serif"
                android:id="@+id/textView5"
                android:layout_above="@+id/mng_dua"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I intend to keep the fast for tomorrow in the month of Ramadan
[Abu Dawud]"
                android:gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/smng_dua"
                android:textColor="#000000"
                android:typeface="serif"
                android:layout_marginTop="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/dua_adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/aarzu_banner">
            </com.google.android.gms.ads.AdView>

        </LinearLayout>



    </ScrollView>


</LinearLayout>